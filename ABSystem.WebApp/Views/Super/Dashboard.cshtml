<style>
    .dashboard-data {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1vw;
        padding: 0.2vw;
        background: transparent;
        border-radius: 0.5vw;
        box-sizing: border-box;
    }

    .data-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5vw;
        font-size: 1.04vw;
        padding: 0.5vw 1vw;
        background: transparent;
        text-align: center;
        flex: 1;
        position: relative;
    }

        .data-item:not(:last-child) {
            border-right: 0.05vw solid #ccc;
        }

        .data-item img {
            width: 1.04vw;
            height: 1.04vw;
        }

    .label {
        font-size: 0.83vw;
    }

    .value {
        font-size: 1.25vw;
        font-weight: bold;
    }

    .dashboard-data .data-item {
