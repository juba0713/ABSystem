@using ABSystem.Services.Dto;
@model RegisterDto
<html>
<head>
    <title>Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/register.css" />
</head>
<body>
    <div class="container">
        <div class="left-content">
            <div>Welcome To Our AB Booking</div>
            <div>Effortless Meeting Room Booking: Organizing, Scheduling, and Streamlining Your Meetings with Simplicity, Empowering Productivity, One Room at a Time.</div>
            <img src="~/images/image_1.png" />
        </div>
        <div class="right-content">
            <form asp-controller="Account" asp-action="Register" method="POST" class="login-content">

                <div class="title">Sign Up</div>
                @if (ViewData["Error"] != null)
                {
                    <div class="error">@ViewData["Error"]</div>
                }
                <div class="fields">
                    <div class="input-field">
                        <div>
                            <label>Email <span style="color: red;">*</span></label>
                            <input type="email" asp-for="Email" required/>
                        </div>
                        <span asp-validation-for="Email" class="error-message"></span>
                    </div>
                    <div class="input-field">
                        <div>
                            <label>First Name <span style="color: red;">*</span></label>
                            <input type="text" asp-for="FirstName" required />
                        </div>
                        <span asp-validation-for="FirstName" class="error-message"></span>
                    </div>
                    <div class="input-field">
                        <div>
                            <label>Last Name <span style="color: red;">*</span></label>
                            <input type="text" asp-for="LastName" required />
                        </div>
                        <span asp-validation-for="LastName" class="error-message"></span>
                    </div>
                    <div class="input-field">
                        <div>
                            <label>Password <span style="color: red;">*</span></label>
                            <input type="password" asp-for="Password" required />
                            <i class="see-password fa fa-eye fa-lg"></i>
                        </div>
                        <span asp-validation-for="Password" class="error-message"></span>
                    </div>
                    <div class="input-field">
                        <div>
                            <label>Confirm Password <span style="color: red;">*</span></label>
                            <input type="password" asp-for="ConfirmPassword" id="confirmPassword" required />
                            <i class="see-password fa fa-eye fa-lg"></i>
                        </div>
                        <span asp-validation-for="Password" class="error-message"></span>
                    </div>
                </div>
                <div class="button-group">
                    <button class="action-btn" type="submit">Register</button>
                    <div>
                        <div>Already have an account? <a asp-action="">Sign In</a></div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script>
        document.querySelectorAll('.see-password').forEach(ic => ic.addEventListener('click', function () {
            console.log(this);
            passwordField = this.parentElement.querySelector('input');
            if (passwordField.type === 'password') {

                passwordField.type = 'text';
                this.classList.remove('fa-eye');
                this.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                this.classList.remove('fa-eye-slash');
                this.classList.add('fa-eye');
            }
        }));
    </script>
</body>
</html>