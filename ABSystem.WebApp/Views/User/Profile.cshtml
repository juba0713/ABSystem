@{
}
<html>
    <head>
        <title></title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="~/css/common.css" />
        <link rel="stylesheet" href="~/css/header.css" />
        <link rel="stylesheet" href="~/css/sidebar.css" />
        <link href="~/css/user/profile.css" rel="stylesheet" />
        <style>
        form {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .form-row {
            display: flex;
            gap: 2rem;
        }

        label {
            font-size: 0.9rem;
            font-weight: bold;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"] {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1rem;
        }

            input[type="text"]:focus,
            input[type="email"]:focus,
            input[type="password"]:focus {
                border-color: #007bff;
                outline: none;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            }

        span {
            font-size: 0.8rem;
            color: #d9534f;
        }
        </style>
    </head>
    <body>
    <div class="container">
        <partial name="Header" />
        <div class="content">
            <partial name="Sidebar" />
            <div class="main-content">
                <div class="sub-header border-radius-5">
                    <div>Account</div>
                </div>
                <div class="sub-content border-radius-5">                    
                    <div>
                        <form asp-controller="/" asp-action="/" method="post">
                            <div class="form-group">
                                <label>Full Name</label>
                                <div class="form-row">
                                    <div class="form-group">
                                        <label for="firstname">First Name</label>
                                        <input type="text" id="firstname" name="firstname" value="" />
                                        <span></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="familyname">Family Name</label>
                                        <input type="text" id="familyname" name="familyname" value="" />
                                        <span></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Contact Email</label>
                                <div class="form-row align-center">
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        <input type="email" id="email" name="Email" value="" />
                                        <span></span>
                                    </div>
                                    <button type="button" class="add-email-button">
                                        <span class="icon">+</span> Add Email
                                    </button>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <div class="form-row">
                                    <div class="form-group">
                                        <label for="password">Password</label>
                                        <input type="password" id="password" name="password" value="" />
                                        <span></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="confirmpassword">Confirm Password</label>
                                        <input type="password" id="confirmpassword" name="confirmpassword" value="" />
                                        <span></span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <script src="~/js/common.js"></script>
    </body>
</html>